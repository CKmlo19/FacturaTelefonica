@model List<FacturaModel>
@{
    ViewData["Title"] = "Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buscar un Numero Telefonico</h1>
<div class="card">
    <div class="card-body">
        <form asp-action="ListarFacturas" asp-controller="Factura" method="post" class="row g-3 align-items-center">
            <div class="col">
                <label for="numero" class="visually-hidden"> Buscar</label>
                <input type="text" id="numero" name="numero" class="form-control" placeholder="Filtrar">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>
        <table class="table table-bordered" bgcolor="white" width="700">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fecha de Emision</th>
                    <th>Total A Pagar</th>
                    <th>Estado</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FechaEmision</td>
                        <td>@item.TotalAPagar</td>
                        <td>@item.Estado</td>
                        <a asp-action="DetallesFactura" asp-controller="Detalles" class="btn btn-primary btn-sm" 
                        asp-route-ValorDocumentoIdentidad="@item.Id"><i class="bi bi-pencil-square"></i> Detalles</a>

                    </tr>
                }
            </tbody>
           
        </table>
    </div>
</div>

